<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :user, "Usuario" %><br />
    <%= f.text_field :user, autocomplete: "off"%>
  </div>

  <div class="field">
    <%= f.label :email, "Correo electronico" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name, "Nombre" %><br />
    <%= f.text_field :first_name, autocomplete: "off"%>
  </div>

  <div class="field">
    <%= f.label :last_name, "Apellido" %><br />
    <%= f.text_field :last_name, autocomplete: "off"%>
  </div>


  <div class="field">
    <%= f.label :phone, "Telefono" %><br />
    <%= f.text_field :phone, autocomplete: "off"%>
  </div>

  <div class="field">
    <%= f.label :password, "ContraseÃ±a" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Repetir la contraseÃ±a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
