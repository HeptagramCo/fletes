//Colores base

azul = #1E88E5 //provicional
azul_claro = #42A5F5 

body
	margin 0
	padding 0
	font-size 16px
	font-family Arial

#container-home
	width 100%
	& .features
		padding 3em 0
		text-align center
		width 100%
		& figure
			display inline-block
			text-align center
			margin 0 3em
			max-width 180px
			& img
				width 100%
			& figcaption
				color azul
				font-size 1.3em
				margin-top 1em
	& .steps
		background azul
		padding 3em 0
		text-align center
		width 100%
		& figure
			display inline-block
			text-align center
			margin 0 3em
			max-width 180px
			& img
				width 100%
			& figcaption
				color white
				font-size 1.3em
				margin-top 1em
	
#home-header
	background url("header.jpg") center center
	background-repeat no-repeat
	background-attachment fixed
	height 280px
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	width 100%
	text-align center
	padding 7% 0	

#menu-off
	background azul
	width 100%
	& ul
		margin 0
		padding 0
		& .page-cont
			display inline-block
			margin-left 2em
			& a
				color white
				display inline-block
				text-decoration none
				padding .7em .8em
				& li
					list-style none
		& .sessions-cont
			display inline-block
			margin-right 30px
			font-size 0em
			float right
			& .link_sign
				li
					background white
					border 2px solid white
					border-radius 5px 0 0 5px
					color azul
					padding 4px
			& .link_log
				li
					border 2px solid white
					border-radius 0 5px 5px 0
					color white
					padding 4px
			& a
				color white
				display inline-block
				text-decoration none
				padding 5px 0
				& li
					font-size 16px
					list-style none
			
				
		
